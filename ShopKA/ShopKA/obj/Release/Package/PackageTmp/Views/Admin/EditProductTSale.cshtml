@model DataBase.ProductTSale
@using DataBase

@{
    ViewBag.Title = "Sửa giảm giá theo Loại SP";
    Layout = "~/Views/Shared/_Aminlayout.cshtml";
    int ID = ViewBag.ProductT.ID;
    ProductTSale Sale = ViewBag.Sale;
}

<div class="app-content">

    <!--====== Section 1 ======-->


    <div class="u-s-p-b-60">

        <!--====== Section Intro ======-->
        <div class="section__intro u-s-m-b-60" style="margin-bottom:1.875rem;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section__text-wrap">
                            <h1 class="section__heading u-c-secondary">Sửa Sale của Loại SP</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Intro ======-->
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row row--center">
                    <div class="col-lg-12 col-md-8 u-s-m-b-30">
                        <div class="l-f-o">
                            <div class="l-f-o__pad-box">







                                @using (Html.BeginForm("EditProductTSale", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()


                                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red;" })

                                    @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @type = "hidden", @Value = Sale.ID } })
                                    @Html.EditorFor(model => model.ProductTID, new { htmlAttributes = new { @class = "form-control", @type = "hidden", @Value = ID } })
                                    <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">
                                        @Html.LabelFor(model => model.Sale, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Sale, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @Value = Sale.Sale * 100 } })
                                        @Html.ValidationMessageFor(model => model.Sale, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">
                                        @Html.LabelFor(model => model.SaleTimeStart, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.SaleTimeStart, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @type = "date",@Value= String.Format("{0:yyyy-MM-dd}", Sale.SaleTimeStart) } })
                                        @Html.ValidationMessageFor(model => model.SaleTimeStart, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">
                                        @Html.LabelFor(model => model.SaleTimeEnd, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.SaleTimeEnd, new { htmlAttributes = new { onfocus = "(this.type='date')", onblur = "(this.type='text')", @class = "input-text input-text--primary-style", @type = "date" ,@Value= String.Format("{0:yyyy-MM-dd}", Sale.SaleTimeEnd) } })
                                        @Html.ValidationMessageFor(model => model.SaleTimeEnd, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">
                                        @Html.LabelFor(model => model.Banner, htmlAttributes: new { @class = "gl-label" })
                                        <div class="col-md-15">
                                            <input type="file" name="file1" />
                                        </div>

                                    </div>
                                    <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">
                                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @Value = @Sale.Title } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">
                                        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @Value = Sale.Content } })
                                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="gl-inline">
                                        <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">

                                            <button class="btn btn--e-transparent-brand-b-2" type="submit">OK</button>
                                        </div>

                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
</div>

