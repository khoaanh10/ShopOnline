@model List<DataBase.Color>
    @using ShopKA.Models
@{
    ViewBag.Title = "Thuộc tính sản phẩm";
    Layout = "~/Views/Shared/_Aminlayout.cshtml";
}





<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a class="btn btn-info btn-sm btn-circle" href="/Admin/DetailNSX/@ViewBag.TT.ProducerID">←</a>
        <h6 class="m-0 font-weight-bold text-primary" style="display:inline-block">Tên SP: @ViewBag.TT.ProductName</h6>
        <a class="btn btn-info btn-sm btn-circle" style="display:inline-block;float:right" href="/Admin/Index">⇇</a>
        <hr />
        <a href="@Url.Action("addColor","Admin",new { ID2 = ViewBag.TT.ID })" ," class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Thêm Màu - Cấu hình
        </a>
    </div>

    <div class="card-body" id="product">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Tên Màu/Cấu hình</th>


                        <th scope="col">SL</th>

                        <th scope="col">                      </th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <th scope="row">@item.ID</th>
                            <td>@item.ColorName</td>
                            <td>@item.Quantity</td>

                            <td>
                                <a class="btn btn-danger btn-circle btn-sm" href="@Url.Action("deleteColor","Admin",new { ID = @item.ID,ID2 = @ViewBag.TT.ID })" role="button"><i class="fas fa-trash"></i></a>
                                <a class="btn btn-warning btn-circle btn-sm" href="@Url.Action("editColor","Admin",new { ID = @item.ID,ID2 = @ViewBag.TT.ID  })" role="button">Sửa</a>


                            </td>
                        </tr>
                    }

                </tbody>


            </table>
        </div>
    </div>
</div>

