@model DataBase.Producer

@{
    ViewBag.Title = "EditProducer";
    Layout = "~/Views/Shared/_Aminlayout.cshtml";
}

<div class="app-content">

    <!--====== Section 1 ======-->


    <div class="u-s-p-b-60">

        <!--====== Section Intro ======-->
        <div class="section__intro u-s-m-b-60" style="margin-bottom:1.875rem;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section__text-wrap">
                            <h1 class="section__heading u-c-secondary">Sửa NSX @Model.ProducerName</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Intro ======-->
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row row--center">
                    <div class="col-lg-12 col-md-8 u-s-m-b-30">
                        <div class="l-f-o">
                            <div class="l-f-o__pad-box">







                                @using (Html.BeginForm("EditProducer", "Admin", new { ID1 = Model.ID, ID2 = Model.ProductTID }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red;" })




                                    <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">
                                        @Html.LabelFor(model => model.ProducerName, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.ProducerName, new { htmlAttributes = new { @class = "input-text input-text--primary-style",  @value = Model.ProducerName } })
                                        @Html.ValidationMessageFor(model => model.ProducerName, "", new { @class = "text-danger" })

                                    </div>



                                    <div class="gl-inline">
                                        <div class="u-s-m-b-30" style="margin-bottom:1.875rem;">

                                            <button class="btn btn--e-transparent-brand-b-2" type="submit">OK</button>
                                        </div>

                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
</div>

