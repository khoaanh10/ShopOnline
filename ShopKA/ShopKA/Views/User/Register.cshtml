@model DataBase.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="breadcrumb">
                    <div class="breadcrumb__wrap">
                        <ul class="breadcrumb__list">
                            <li class="has-separator">

                                <a href="index.html">Home</a>
                            </li>
                            <li class="is-marked">

                                <a href="signup.html">Signup</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->
    <!--====== Section 2 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Intro ======-->
        <div class="section__intro u-s-m-b-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section__text-wrap">
                            <h1 class="section__heading u-c-secondary">CREATE AN ACCOUNT</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Intro ======-->
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row row--center">
                    <div class="col-lg-6 col-md-8 u-s-m-b-30">
                        <div class="l-f-o">
                            <div class="l-f-o__pad-box">
                                <h1 class="gl-h1">PERSONAL INFORMATION</h1>
                                @using (Html.BeginForm("Register", "User", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="gl-s-api">
                                        <div class="u-s-m-b-15">

                                            <button class="gl-s-api__btn gl-s-api__btn--fb" type="button">
                                                <i class="fab fa-facebook-f"></i>

                                                <span>Signup with Facebook</span>
                                            </button>
                                        </div>
                                        <div class="u-s-m-b-30">

                                            <button class="gl-s-api__btn gl-s-api__btn--gplus" type="button">
                                                <i class="fab fa-google"></i>

                                                <span>Signup with Google</span>
                                            </button>
                                        </div>
                                    </div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red;" })
                                    <div class="u-s-m-b-30">

                                        @Html.LabelFor(model => model.Fullname, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @class = "input-text input-text--primary-style" } })
                                        @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger",@style="color:red;" })

                                    </div>

                                    <div class="gl-inline">
                                        <div class="u-s-m-b-30">

                                            <!--====== Date of Birth Select-Box ======-->

                                            <span class="gl-label">Ngày sinh</span>
                                            <div class="gl-dob">
                                                
                                                <select class="select-box select-box--primary-style" name="day">
                                                    <option selected value="1">Ngày 1</option>
                                                    @for (var i = 2; i < 32; i++)
                                                    {
                                                        
                                                        <option value="@i">Ngày @i</option>
                                                    }
                                                </select>
                                                <select class="select-box select-box--primary-style" name="month">
                                                    <option selected value="1">Tháng 1</option>
                                                    @for (var i = 2; i < 13; i++)
                                                    {
                                                        <option value="@i">Tháng @i</option>
                                                    }

                                                </select>

                                                <select class="select-box select-box--primary-style" name="year">
                                                    <option selected value="1970">Năm 1970</option>
                                                    <@for (var i = 1970; i < 2022; i++)
                                                        {
                                                            <option value="@i">Năm @i</option>
                                                        }
                                                </select>
                                            </div>
                                            <!--====== End - Date of Birth Select-Box ======-->
                                        </div>
                                        <div class="u-s-m-b-30">

                                            <label class="gl-label" for="gender">Giới tính</label><select class="select-box select-box--primary-style u-w-100" name="Gender">

                                                <option selected value=true>Nam</option>
                                                <option value=false>Nữ</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="u-s-m-b-30">

                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @type = "email" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger",@style="color:red;" })
                                    </div>
                                    <div class="u-s-m-b-30">
                                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "input-text input-text--primary-style" } })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", @style = "color:red;" })
                                    </div>
                                    <div class="u-s-m-b-30">
                                        @Html.LabelFor(model => model.Password1, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Password1, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Password1, "", new { @class = "text-danger" , @style = "color:red;" })
                                    </div>
                                    <div class="u-s-m-b-30">
                                        @Html.LabelFor(model => model.Password2, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Password2, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Password2, "", new { @class = "text-danger", @style = "color:red;" })
                                    </div>
                                    <div class="u-s-m-b-15">

                                        <button class="btn btn--e-transparent-brand-b-2" type="submit">ĐĂNG KÍ</button>
                                    </div>

                                    <a class="gl-link" href="#">Quay lại cửa hàng</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
</div>

