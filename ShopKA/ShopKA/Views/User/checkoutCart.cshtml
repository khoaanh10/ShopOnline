                                                <th>Hành động</th>
                                                <th>Họ tên</th>
                                                <th>Địa chỉ</th>
                                                <th>SDT</th>
                                                <th>Trạng thái</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in address)
                                            {
                                                <tr>
                                                    <td>

                                                        <!--====== Radio Box ======-->
                                                        <div class="radio-box">
                                                            @{ MyDB Db = new MyDB();
                                                            }

                                                            @if (item.ID == ship.ID)
                                                            {<input type="radio" id="address-1" value=@item.ID name="checkship" checked="">}
