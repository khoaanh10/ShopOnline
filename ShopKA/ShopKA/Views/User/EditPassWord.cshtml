@model DataBase.EditPassWord
@using reCAPTCHA.MVC

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="breadcrumb">
                    <div class="breadcrumb__wrap">
                        <ul class="breadcrumb__list">
                            <li class="has-separator">

                                <a href="/">Home</a>
                            </li>
                            <li class="is-marked">

                                <a href="/User/EditPassWord">Đổi mật khẩu</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.TB == true)
    {
        <div class="text-danger" style="color:green;font-size:180%;"><p style="text-align:center;">Đổi mật khẩu thành công</p></div>}

    <div class="u-s-p-b-60">

        <!--====== Section Intro ======-->
        <div class="section__intro u-s-m-b-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section__text-wrap">
                            <h1 class="section__heading u-c-secondary">ĐỔI MẬT KHẨU</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Intro ======-->
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row row--center">
                    <div class="col-lg-6 col-md-8 u-s-m-b-30">
                        <div class="l-f-o">
                            <div class="l-f-o__pad-box">


                                <h1 class="gl-h1">Thay đổi mật khẩu của bạn</h1>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()


                                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red;" })



                                    <div class="u-s-m-b-30">
                                        @Html.LabelFor(model => model.Oldpass, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Oldpass, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Oldpass, "", new { @class = "text-danger", @style = "color:red;" })
                                    </div>
                                    <div class="u-s-m-b-30">
                                        @Html.LabelFor(model => model.Newpass1, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Newpass1, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Newpass1, "", new { @class = "text-danger", @style = "color:red;" })
                                    </div>
                                    <div class="u-s-m-b-30">
                                        @Html.LabelFor(model => model.Newpass2, htmlAttributes: new { @class = "gl-label" })

                                        @Html.EditorFor(model => model.Newpass2, new { htmlAttributes = new { @class = "input-text input-text--primary-style", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Newpass2, "", new { @class = "text-danger", @style = "color:red;" })
                                    </div>
                                    <div class="u-s-m-b-30">
                                        @Html.Recaptcha()
                                        @Html.ValidationMessage("ReCaptcha")
                                    </div>
                                    <div class="gl-inline">
                                        <div class="u-s-m-b-30">

                                            <button class="btn btn--e-transparent-brand-b-2" type="submit">ĐỔI MẬT KHẨU</button>
                                        </div>

                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
</div>

