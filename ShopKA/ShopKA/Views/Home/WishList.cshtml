<script>
    $('.deleteWish').on('click', function () {
        var ID = $(this).attr('data_value');
        
            run_waitMe('#Wish2');
            $.ajax({
                type: 'POST',
                data: { ID: ID },
                url: '/Home/deleteWish',
                success: function (ketqua) {
                    $('#Wish').html(ketqua);
                    stop_waitMe('#Wish2');

                }
            })
        




    });

    $('#clearWish').on('click', function () {
        if (confirm('Bạn có chắc chắn muốn xóa hết danh sách không')) {
            run_waitMe('#clear');
            $.ajax({
                type: 'POST',
                data: {},
                url: '/Home/clearWish',
                success: function (ketqua) {
                    $('#clear').html(ketqua);
                    stop_waitMe('#clear');

                }
            })
        }




    });


</script>

