@model List<DataBase.User>
@{
    ViewBag.Title = "Color";
    Layout = "~/Views/Shared/_Aminlayout.cshtml";
}





<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Danh sách thành viên</h6></div>


    <div class="card-body" id="product">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Họ tên</th>


                        <th scope="col">UserName</th>
                        <th scope="col">Chức vụ</th>

                        <th scope="col">                      </th>
</thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <th scope="row">@item.ID</th>
                            <td>@item.Fullname</td>
                            <td>@item.Username</td>
                            <td>@{string t = item.Permission == 0 ? "Admin" : item.Permission == 1 ? "Quản trị viên" : "Thành viên";}@t</td>
      
                                  <td>
      
                                      <a class="btn btn-primary" href="" role="button">Khóa</a>
                                <a class="btn btn-primary" href="" role="button">Đổi mật khẩu</a>


                            </td>
                        </tr>
                    }

                </tbody>


            </table>
        </div>
    </div>
</div>

