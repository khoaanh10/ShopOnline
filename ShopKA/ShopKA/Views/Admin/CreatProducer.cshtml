@model DataBase.Producer

@{
    ViewBag.Title = "CreatProducer";
    Layout = "~/Views/Shared/_Aminlayout.cshtml";
}

<h2>Tạo NSX của Loại SP: @ViewBag.TT.ProducTName</h2>

@using (Html.BeginForm("CreatProducer","Admin",new { ID = ViewBag.TT.ID }))
{
