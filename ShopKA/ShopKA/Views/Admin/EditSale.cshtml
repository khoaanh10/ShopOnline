@model DataBase.SaleProduct
    @using DataBase

@{
    ViewBag.Title = "EditSale";
    Layout = "~/Views/Shared/_Aminlayout.cshtml";
    
    float Sale =( Model.Sale * 100);
}

<h2>Sửa khuyễn mãi</h2>

@using (Html.BeginForm("EditSale","Admin",new {PCID=ViewBag.ID }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SaleProduct</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @type = "hidden",@Value=Model.ID } })

        
                @Html.EditorFor(model => model.ProductID, new { htmlAttributes = new { @type="hidden"} })
                
         

        <div class="form-group">
            @Html.LabelFor(model => model.Sale, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sale, new { htmlAttributes = new { @class = "form-control",@Value=Sale } })
                @Html.ValidationMessageFor(model => model.Sale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SaleTimeStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SaleTimeStart, new { htmlAttributes = new { @class = "form-control",@type="date",@Value=Model.SaleTimeStart } })
                @Html.ValidationMessageFor(model => model.SaleTimeStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SaleTimeEnd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SaleTimeEnd, new { htmlAttributes = new { @class = "form-control",@type="date", @Value = Model.SaleTimeEnd } })
                @Html.ValidationMessageFor(model => model.SaleTimeEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
